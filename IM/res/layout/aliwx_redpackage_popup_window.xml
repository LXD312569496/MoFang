<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_photo_window"
    android:layout_width="279dp"
    android:layout_height="382dp"
    xmlns:round="http://schemas.android.com/apk/res-auto"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/aliwx_redpocket_bg"/>

    <ImageView
        android:id="@+id/hongbao_close_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:alpha="0.8"
        android:src="@drawable/aliwx_hongbao_icon_close"/>


    <com.alibaba.mobileim.fundamental.widget.roundedimage.RoundedImageView
        android:id="@+id/aliwx_pic"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        round:riv_corner_radius="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/aliwx_reply_bar_album" />
    <TextView
        android:id="@+id/aliwx_showname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/aliwx_taobao_item_text_color7"
        android:textSize="14sp"
        android:layout_below="@+id/aliwx_pic"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/aliwx_package_type_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/aliwx_showname"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:textColor="@color/aliwx_taobao_item_text_color8"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/aliwx_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_marginTop="15dp"
        android:layout_below="@id/aliwx_package_type_desc"
        android:src="@drawable/aliwx_coin"/>

    <TextView
        android:id="@+id/aliwx_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/aliwx_coin"
        android:layout_marginTop="29dp"
        android:text="恭喜发财，大吉大利"
        android:gravity="center"
        android:paddingLeft="46dp"
        android:paddingRight="46dp"
        android:textColor="@color/aliwx_taobao_item_text_color9"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/aliwx_info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/aliwx_package_type_desc"
        android:layout_marginTop="82dp"
        android:gravity="center"
        android:maxEms="7"
        android:text="超过24小时未领取红包已失效"
        android:visibility="gone"
        android:textColor="@color/aliwx_white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/aliwx_info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/aliwx_showname"
        android:layout_marginTop="99dp"
        android:gravity="center"
        android:maxEms="9"
        android:text="手慢了，红包已被领完，下次早点来哦～"
        android:visibility="gone"
        android:textColor="@color/aliwx_white"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/aliwx_view_all_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:drawablePadding="2dp"
        android:drawableRight="@drawable/aliwx_hongbao_view_all_icon"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="查看大家的手气"
        android:textColor="#ffe8b5"
        android:textSize="12dp" />


</RelativeLayout>
