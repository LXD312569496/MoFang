<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        style="@style/aliwx_common_title_style">

        <TextView
            android:id="@+id/title_back"
            style="@style/aliwx_common_title_left_btn_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ico_title_back_blue" />

        <TextView
            android:id="@+id/title_text"
            style="@style/aliwx_self_title_text_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:includeFontPadding="false" />


    </RelativeLayout>


    <com.alibaba.mobileim.extra.xblink.webview.XBHybridWebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />


</LinearLayout>