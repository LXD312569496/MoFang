<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/aliwx_common_two_unit_margin"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/float_ball_description"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/clear_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#00b4ff"
        android:text="@string/clear_log"
        android:textColor="#ffffff"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/aliwx_common_two_safe_margin"
        android:text="@string/log_name"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/log_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/log_name_hint"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/upload_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/aliwx_common_two_unit_margin"
        android:padding="8dp"
        android:background="#00b4ff"
        android:text="@string/upload_log"
        android:textColor="#ffffff"/>

</LinearLayout>
