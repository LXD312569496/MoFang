<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/bar_select_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/bar_select_icon_new"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_gravity="right|top"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/aliwx_new_red_bg"
            android:visibility="gone"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/bar_select_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:textColor="@color/aliwx_color_gray_02"
        android:textSize="@dimen/aliwx_font_third_grade"/>

</LinearLayout>
