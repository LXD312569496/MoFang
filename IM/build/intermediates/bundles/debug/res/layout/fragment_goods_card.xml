<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#58eeeeee">

    <ImageView
        android:id="@+id/close_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:padding="7dp"
        android:src="@drawable/goods_fragment_close"
        android:background="@drawable/circle_bg_gray_btn"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewpager_container"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#051b28"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#051b28"
            android:textSize="12sp"
            android:paddingLeft="12dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/viewpager_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:clipChildren="false">

        <com.alibaba.mobileim.kit.widget.WrapContentHeightViewPager
            android:id="@+id/viewpager"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:layout_centerInParent="true">
        </com.alibaba.mobileim.kit.widget.WrapContentHeightViewPager>
    </RelativeLayout>

</RelativeLayout>
